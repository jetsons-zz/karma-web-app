# Karma Web App - 环境变量配置示例
# 复制此文件为 .env.local 并填写实际值

# ============================================================================
# Mock API 配置
# ============================================================================

# 是否启用 Mock API（开发时使用）
# true: 使用 MSW 拦截请求，返回模拟数据（前端独立开发）
# false: 使用真实后端 API（后端就绪后）
NEXT_PUBLIC_ENABLE_MOCK=true

# ============================================================================
# 后端 API 配置
# ============================================================================

# 后端 API 基础地址
# 开发环境: http://localhost:8000
# 测试环境: https://api-test.karma.ai
# 生产环境: https://api.karma.ai
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# ============================================================================
# OpenAI 配置（用于 AI 对话功能）
# ============================================================================

# OpenAI API Key
# 获取地址: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI 模型（可选）
# 默认: gpt-4o
OPENAI_MODEL=gpt-4o

# ============================================================================
# Stripe 支付配置（用于订阅功能）
# ============================================================================

# Stripe 公钥（可公开）
# 测试环境: pk_test_...
# 生产环境: pk_live_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here

# Stripe 密钥（服务端使用，不要暴露）
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_here

# Stripe Webhook 密钥
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================================================
# 分析与监控（可选）
# ============================================================================

# Google Analytics ID
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry DSN（错误追踪）
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ============================================================================
# 功能开关（可选）
# ============================================================================

# 是否启用调试模式
NEXT_PUBLIC_DEBUG=false

# 是否启用性能监控
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# ============================================================================
# 快速开始指南
# ============================================================================

# 1. 前端独立开发（推荐）
#    NEXT_PUBLIC_ENABLE_MOCK=true
#    npm run dev
#    → 所有 API 请求被 MSW 拦截，返回模拟数据
#
# 2. 连接真实后端
#    NEXT_PUBLIC_ENABLE_MOCK=false
#    NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
#    npm run dev
#    → 所有 API 请求发送到真实后端
#
# 3. 生产环境
#    NEXT_PUBLIC_ENABLE_MOCK=false
#    NEXT_PUBLIC_API_BASE_URL=https://api.karma.ai
#    npm run build && npm start
